<!DOCTYPE html>
<html>
<head>
  <title>PropertyManager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Bubbler+One|Open+Sans:300,600|Rubik:300,400,700|Biryani:300,400,700" rel="stylesheet">
  
</head>
<body>
<div class="container-fluid">
	<!-- CURRENT USER -->
	<% if session[:user_id] %>
		<a class="btn btn-default pull-right" href="/logout">Log Out</a>
	<% end %>
	<!-- FLASH MESSAGES -->
	<% if flash[:success] or flash[:warning] %>
		<% flash.each do |type,msg| %>
			<% msg.each do |i| %>
			<h4><span class="label label-<%= type %>"><%= i %></span></h4>
			<% end %>
		<% end %>
	<% end %>

	<%= yield %>
</div>
</body>
</html>
