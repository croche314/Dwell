<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table>
  <thead>
    <tr>
      <th>Landlord</th>
      <th>Type</th>
      <th>Num units</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Pets</th>
      <th>Outdoor space</th>
      <th>Neighborhood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.landlord %></td>
        <td><%= property.type %></td>
        <td><%= property.num_units %></td>
        <td><%= property.street %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.zip_code %></td>
        <td><%= property.pets %></td>
        <td><%= property.outdoor_space %></td>
        <td><%= property.neighborhood %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

