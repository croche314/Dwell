<% content_for :main_content do %>
<div id="sign_in_page" class="row">
	<h1 class="text-center">Sign In to Dwell</h1>
	<p class="small text-center">Or, <a href="<%= login_path %>">create an account</a></p>
	<div class="col-sm-12">
		<form action="/login" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<div class="form-group">
				<label>Landlord or Renter?</label>
					<select class="form-control" name='user_type' required>
						<option value="landlord">Landlord</option>
						<option value="renter">Renter</option>
					</select>
				</div>
			<div class="form-group">
				<label>Email</label>
				<input class="form-control" type="text" name="email" value="guest@gmail.com" required>
			</div>
			<div class="form-group">
				<label>Password</label>
				<input class="form-control" type="password" name="password" value="guest">
			</div>
			<div class="form-group">
				<input class="btn btn-primary btn-block form-control" type="submit" value="Sign In">
			</div>
		</form>
	</div> <!-- .col -->
</div>
<% end %>