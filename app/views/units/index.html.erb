<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>Name</th>
      <th>Rent</th>
      <th>Occupied</th>
      <th>Lease end</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Washer dryer</th>
      <th>Parking</th>
      <th>Floor</th>
      <th>Utilities</th>
      <th>Furnished</th>
      <th>Sq feet</th>
      <th>Landlord</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.property %></td>
        <td><%= unit.name %></td>
        <td><%= unit.rent %></td>
        <td><%= unit.occupied %></td>
        <td><%= unit.lease_end %></td>
        <td><%= unit.bedrooms %></td>
        <td><%= unit.bathrooms %></td>
        <td><%= unit.washer_dryer %></td>
        <td><%= unit.parking %></td>
        <td><%= unit.floor %></td>
        <td><%= unit.utilities %></td>
        <td><%= unit.furnished %></td>
        <td><%= unit.sq_feet %></td>
        <td><%= unit.landlord %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

