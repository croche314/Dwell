<p id="notice"><%= notice %></p>

<h1>Listing Tenants</h1>

<table>
  <thead>
    <tr>
      <th>Landlord</th>
      <th>Property</th>
      <th>Unit</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Bio</th>
      <th>Income</th>
      <th>Smoker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.landlord %></td>
        <td><%= tenant.property %></td>
        <td><%= tenant.unit %></td>
        <td><%= tenant.first_name %></td>
        <td><%= tenant.last_name %></td>
        <td><%= tenant.birthdate %></td>
        <td><%= tenant.phone %></td>
        <td><%= tenant.email %></td>
        <td><%= tenant.bio %></td>
        <td><%= tenant.income %></td>
        <td><%= tenant.smoker %></td>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

